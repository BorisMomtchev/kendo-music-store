<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Kendo UI Music Store</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @*@Styles.Render("~/Content/css")*@
        <link href="~/Content/kendo.common.min.css" rel="stylesheet" />
        <link href="~/Content/kendo.default.min.css" rel="stylesheet" />
        <link href="~/Content/kendo.mobile.all.min.css" rel="stylesheet" />
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <section>
                @Html.Partial("_LoginPartial")
            </section>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>Genres
                        <ul>
                            @{Html.RenderAction("GenreMenu", "Store");}
                        </ul>
                    </li>
                    <li>About
                        <ul>
                            <li>
                                <div class="k-content menu-content">
                                    <img src="~/Images/kendo-logo.png" />
                                    <p>Try Kendo UI yourself in the interactive Kendo UI Dojo!</p>
                                    <p><a href="http://www.kendoui.com/dojo.aspx" target="_blank">Launch Kendo UI Dojo</a></p>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </nav>
            <input type="button" />
            <input id="main-search"/>
        </header>
        <div id="body">
            @RenderBody()
        </div>
        <footer>
            <p><a href="http://mvcmusicstore.codeplex.com">mvcmusicstore.codeplex.com</a></p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        <script src="~/Scripts/kendo.all.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#menu").kendoMenu();
                $("#main-search").kendoAutoComplete({
                    filter: 'contains',
                    minLength: 3,
                    dataTextField: "Title",
                    placeholder: "Search music...",
                    dataSource: {
                        serverFiltering: false,
                        serverPaging: false,
                        pageSize: 20,
                        transport: {
                            read: {
                                url: "/Api/Albums"
                            }
                        }
                    },
                    template: "<img src='${data.AlbumArtUrl}' /><span>${data.Title}</span><span>${data.Artist.Name}</span>"
                });
            });
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
