@section scripts
{
    <script src="~/Scripts/store-browse.js"></script>
}

<script id="album-template" type="text/x-kendo-template">
    <div class="album">
        <img src="#: AlbumArtUrl #" />
        <span class="title" data-bind="text: Title"></span>
        <span class="artist" data-bind="text: Artist.Name"></span>
        <span class="price" data-bind="textFormatted: Price" data-format="c"></span>
    </div>
</script>

<section class="album-list">
<h3 data-bind="text: genre.Name"></h3>
<div class="clearfix" data-role="listview" data-bind="source: albums" data-template="album-template"></div>
</section>